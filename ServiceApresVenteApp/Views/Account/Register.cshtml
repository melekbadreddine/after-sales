@model ServiceApresVenteApp.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "User Registration";
}

<div class="container mt-4">
    <!-- Affichage du message de succès si l'utilisateur a été ajouté avec succès -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" onclick="alertClosed()"></button>
        </div>
    }

    <div class="form-container">
        <h2 class="text-center text-primary">Inscription</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName" class="form-label">Prénom</label>
                <input asp-for="FirstName" class="form-control" placeholder="Entrer votre prénom" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="form-label">Nom de la Famille</label>
                <input asp-for="LastName" class="form-control" placeholder="Entrer votre nom" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">Adresse Email</label>
                <input asp-for="Email" class="form-control" placeholder="Entrer votre Adresse Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Mot de Passe</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Entrer votre mot de passe" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirmer votre Mot de Passe</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirmer votre mot de passe" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress" class="form-label">Adresse</label>
                <input asp-for="Adress" class="form-control" placeholder="Entrer votre adresse" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TelNumber" class="form-label">Numéro de Téléphone</label>
                <input asp-for="TelNumber" class="form-control" placeholder="Entrer votre numéro de téléphone" />
                <span asp-validation-for="TelNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
        </form>
    </div>
</div>

<!-- Scripts de Bootstrap pour les alertes -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Fonction pour bloquer la redirection tant que l'alerte n'est pas fermée
    function alertClosed() {
        // Après la fermeture de l'alerte, redirige l'utilisateur
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home")'; // Changez cette URL selon votre besoin
        }, 500); // Délai pour attendre que l'alerte soit fermée
    }
</script>
