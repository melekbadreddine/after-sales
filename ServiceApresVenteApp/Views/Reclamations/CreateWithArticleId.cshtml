@model ServiceApresVente.Models.Reclamation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reclamation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateWithArticleId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateReclamation" class="control-label"></label>
                <input asp-for="DateReclamation" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateReclamation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ArticleId" type="hidden" value="@ViewData["ArticleId"]" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Article</label>
                <input type="text" value="@ViewData["Nom"]" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Reference</label>
                <input type="text" value="@ViewData["Reference"]" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
