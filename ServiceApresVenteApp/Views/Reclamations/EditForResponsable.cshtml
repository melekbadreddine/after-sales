@model ServiceApresVente.Models.Reclamation

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Modifier la Réclamation</h1>
    </div>

    <h4>Réclamation</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditForResponsable">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Statut" class="control-label">Statut de la Réclamation</label>
                    <input asp-for="Statut" class="form-control" readonly asp-items="ViewBag.Statut" />
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Enregistrer" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Retour à la liste</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
