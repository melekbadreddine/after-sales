@model IEnumerable<ServiceApresVente.Models.Intervention>

@{
    ViewData["Title"] = "Intervention List";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>Intervention List</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
                <h5 class="mb-0">List of Interventions</h5>
                <a class="btn btn-success" asp-action="Create">Create New Intervention</a>
            </div>

            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Technicien)</th>
                        <th>@Html.DisplayNameFor(model => model.DateIntervention)</th>
                        <th>@Html.DisplayNameFor(model => model.EstSousGarantie)</th>
                        <th>@Html.DisplayNameFor(model => model.CoutMainOeuvre)</th>
                        <th>@Html.DisplayNameFor(model => model.CoutTotal)</th>
                        <th>@Html.DisplayNameFor(model => model.Reclamation)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Technicien)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateIntervention)</td>
                            <td>@Html.DisplayFor(modelItem => item.EstSousGarantie)</td>
                            <td>@Html.DisplayFor(modelItem => item.CoutMainOeuvre)</td>
                            <td>@Html.DisplayFor(modelItem => item.CoutTotal)</td>
                            <td>@Html.DisplayFor(modelItem => item.Reclamation.Id)</td>
                            <td class="text-center">
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-secondary" asp-action="Create">Create New Intervention</a>
        </div>
    </div>
</div>
