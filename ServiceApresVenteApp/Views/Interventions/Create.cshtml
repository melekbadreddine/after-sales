@model ServiceApresVente.Models.Intervention

@{
    ViewData["Title"] = "Create Intervention";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3>Create New Intervention</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="form-group">
                    <label asp-for="ReclamationId" class="font-weight-bold">Reclamation</label>
                    <select asp-for="ReclamationId" class="form-control">
                        <option value="">-- Select Reclamation --</option>
                        @foreach (var item in ViewBag.ReclamationId)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Technicien" class="font-weight-bold">Technician</label>
                    <input asp-for="Technicien" class="form-control" placeholder="Enter technician's name" />
                    <span asp-validation-for="Technicien" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="DateIntervention" class="font-weight-bold">Date of Intervention</label>
                    <input asp-for="DateIntervention" class="form-control" type="date" />
                    <span asp-validation-for="DateIntervention" class="text-danger"></span>
                </div>

                <div class="form-group form-check mt-3">
                    <input class="form-check-input" type="checkbox" asp-for="EstSousGarantie" />
                    <label class="form-check-label" for="EstSousGarantie">
                        Is under warranty
                    </label>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="CoutMainOeuvre" class="font-weight-bold">Labor Cost</label>
                    <input asp-for="CoutMainOeuvre" class="form-control" type="number" placeholder="Enter labor cost" />
                    <span asp-validation-for="CoutMainOeuvre" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Create Intervention</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-link" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
